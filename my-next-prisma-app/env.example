# Database Configuration
# Prisma Accelerate URL (for production with caching)
DATABASE_URL=prisma://accelerate.prisma-data.net/?api_key=your_accelerate_api_key
# Direct Database URL (for migrations and management)
DIRECT_DATABASE_URL=postgresql://user:password@host:port/database

# AI Provider API Keys (for AI Quiz Generation)
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/settings/keys
# - Google AI Studio (Gemini): https://aistudio.google.com/app/apikey
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Razorpay Route Platform Account ID
# This is your own account's ID, which you can find in your Razorpay Dashboard.
# It's required to receive the platform commission from split payments.
# Example: acc_XXXXXXXXXXXXXX
RAZORPAY_PLATFORM_ACCOUNT_ID=your_platform_razorpay_account_id_here

# WebSocket Server (client URL used by socket.io-client)
# For production, use your deployed WebSocket server URL (wss:// for secure)
NEXT_PUBLIC_WS_URL=http://localhost:3001
# WebSocket Server internal port (used by ws-server)
WS_PORT=3001

# LiveKit Configuration
# Public URL used by clients to connect (use wss:// for production)
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit-server.com
# Server-side credentials used by ws-server to mint tokens
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# Redis Configuration (for WebSocket server)
# For production, use your Redis instance URL
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# Clerk Authentication (for ws-server token verification)
# The JWT issuer URL for your Clerk instance.
# Example (US production): https://clerk.your-domain.com or https://api.clerk.com
CLERK_JWT_ISSUER=https://your-clerk-instance.clerk.accounts.dev
# Optional: Comma-separated list of authorized parties (audience/azp) to accept
# Example: http://localhost:3000,https://yourdomain.com
CLERK_AUTHORIZED_PARTIES=https://yourdomain.com

# Vote Throttling
# Window in milliseconds for per-user per-room voting (default 2000)
VOTE_THROTTLE_WINDOW_MS=2000

# Room Configuration
ROOM_TTL_MATCH=300
ROOM_TTL_CLAN=2592000
ROOM_TTL_CUSTOM=3600

# Vercel Cron Jobs Security (Production Only)
# Secret token to secure Vercel cron endpoints
# Generate with: openssl rand -base64 32
CRON_SECRET=your_secure_cron_secret_here 